package Hacking;
import java.util.*;

public class MainControl {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		System.out.println("Hello agent\n");
		pause();
		System.out.println("Welcome to Hacking Simulator\n\n");
		pause();
		System.out.println("Your task today is to destroy the infamous AI called Magpie");
	}
	
	public static void pause(){
		long currenttime = System.currentTimeMillis();
		long checktime = 0;
		while ((checktime = System.currentTimeMillis()) < (currenttime + 1000)){
		}
	}

}
